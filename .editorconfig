# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

# All files
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space

# Python files
[*.py]
indent_size = 4
max_line_length = 88

# Java files
[*.java]
indent_size = 4
max_line_length = 120

# C/C++ files
[*.{c,cc,cpp,cxx,h,hpp,hxx}]
indent_size = 2
max_line_length = 100

# JavaScript/TypeScript files
[*.{js,jsx,ts,tsx}]
indent_size = 2
max_line_length = 100

# JSON files
[*.json]
indent_size = 2

# YAML files
[*.{yml,yaml}]
indent_size = 2

# XML files
[*.xml]
indent_size = 2

# Markdown files
[*.md]
indent_size = 2
trim_trailing_whitespace = false

# Shell scripts
[*.{sh,bash}]
indent_size = 2

# Makefile
[Makefile]
indent_style = tab

# Configuration files
[*.{ini,cfg,conf}]
indent_size = 4

# Docker files
[Dockerfile*]
indent_size = 2

# GitHub workflow files
[.github/workflows/*.yml]
indent_size = 2

# Industrial automation specific files
[*.{TP,LS,JBI,DAT,POS}]
# FANUC, Yaskawa robot files
indent_size = 4
insert_final_newline = false

[*.{vpp,vppx}]
# Cognex VisionPro files
insert_final_newline = false

[*.{rdks,rdkx}]
# RoboDK files
insert_final_newline = false
