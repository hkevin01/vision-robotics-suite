# Vision Robotics Suite Environment Configuration
# Copy this file to .env and fill in your actual values

# Database Configuration
DATABASE_URL=sqlite:///./vision_robotics.db
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=vision_robotics
DATABASE_USER=your_username
DATABASE_PASSWORD=your_password

# Vision System Configuration
HALCON_LICENSE_PATH=/opt/halcon/license/
COGNEX_IP_ADDRESS=192.168.1.100
COGNEX_USERNAME=admin
COGNEX_PASSWORD=your_password

# Robot System Configuration
FANUC_ROBOT_IP=192.168.1.10
YASKAWA_ROBOT_IP=192.168.1.11
ABB_ROBOT_IP=192.168.1.12
UR_ROBOT_IP=192.168.1.13

# PLC Configuration
SIEMENS_PLC_IP=192.168.1.20
SIEMENS_PLC_RACK=0
SIEMENS_PLC_SLOT=1
ROCKWELL_PLC_IP=192.168.1.21

# OPC UA Configuration
OPC_UA_SERVER_URL=opc.tcp://192.168.1.30:4840
OPC_UA_USERNAME=opcuser
OPC_UA_PASSWORD=your_password

# SCADA/HMI Configuration
HMI_SERVER_IP=192.168.1.40
HMI_SERVER_PORT=8080

# Quality System Configuration
QS_DATABASE_URL=postgresql://user:pass@localhost:5432/quality_db
QS_CERTIFICATION_PATH=/opt/certs/

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE_PATH=./logs/vision_robotics.log
LOG_MAX_SIZE=10MB
LOG_BACKUP_COUNT=5

# Security Configuration
SECRET_KEY=your-secret-key-here
JWT_SECRET=your-jwt-secret-here
SSL_CERT_PATH=/opt/certs/ssl.crt
SSL_KEY_PATH=/opt/certs/ssl.key

# Development Configuration
DEBUG_MODE=False
TESTING_MODE=False
SIMULATION_MODE=True

# Docker Configuration
DOCKER_REGISTRY=your-registry.com
DOCKER_IMAGE_TAG=latest

# Backup Configuration
BACKUP_PATH=/opt/backups/
BACKUP_RETENTION_DAYS=30

# Monitoring Configuration
PROMETHEUS_PORT=9090
GRAFANA_PORT=3000
ALERT_WEBHOOK_URL=https://your-webhook-url.com
